<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="PBS-SUS" version="3.0">

  <display-name>Webhook Client Example</display-name>

  <!-- Webhook -->
  <servlet>
    <servlet-name>PSWebhookReceiver</servlet-name>
    <servlet-class>org.pageseeder.webhook.client.Receiver</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PSWebhookReceiver</servlet-name>
    <url-pattern>receiver.html</url-pattern>
  </servlet-mapping>

  <!-- Welcome files ========================================================================== -->

  <!--
    Welcome file list
    Ensure that your Web Application server allows Servlets to provide Welcome files.
  -->
  <welcome-file-list>
    <welcome-file>home.html</welcome-file>
  </welcome-file-list>
</web-app>
